<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NbgDev.SwitchMan.App.Pages.SettingsPage"
             Title="VLAN Settings">

    <Grid RowDefinitions="Auto,*" Padding="20">
        
        <!-- Add VLAN Section -->
        <StackLayout Grid.Row="0" Spacing="10" Margin="0,0,0,20">
            <Label Text="Add New VLAN" FontSize="20" FontAttributes="Bold" />
            
            <Label Text="VLAN Name:" />
            <Entry x:Name="VlanNameEntry" Placeholder="Enter VLAN name" />
            
            <Label Text="VLAN ID:" />
            <Entry x:Name="VlanIdEntry" Placeholder="Enter VLAN ID (1-4094)" Keyboard="Numeric" />
            
            <Button Text="Add VLAN" Clicked="OnAddVlanClicked" />
        </StackLayout>

        <!-- VLAN List Section -->
        <StackLayout Grid.Row="1" Spacing="10">
            <Label Text="Configured VLANs" FontSize="20" FontAttributes="Bold" />
            
            <CollectionView x:Name="VlanCollectionView" 
                          ItemsSource="{Binding Vlans}"
                          SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Delete"
                                             BackgroundColor="Red"
                                             Invoked="OnDeleteVlan" />
                                </SwipeItems>
                            </SwipeView.RightItems>
                            
                            <Frame Padding="10" Margin="0,5" BorderColor="LightGray" CornerRadius="5">
                                <Grid ColumnDefinitions="*,Auto">
                                    <Label Grid.Column="0" 
                                         Text="{Binding Name}" 
                                         FontSize="16" 
                                         VerticalOptions="Center" />
                                    <Label Grid.Column="1" 
                                         Text="{Binding VlanId, StringFormat='VLAN {0}'}" 
                                         FontSize="14" 
                                         TextColor="Gray"
                                         VerticalOptions="Center" />
                                </Grid>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Label Text="No VLANs configured yet. Add one above!" 
                         FontSize="14" 
                         TextColor="Gray"
                         HorizontalOptions="Center"
                         Margin="0,20,0,0" />
                </CollectionView.EmptyView>
            </CollectionView>
        </StackLayout>
        
    </Grid>

</ContentPage>
