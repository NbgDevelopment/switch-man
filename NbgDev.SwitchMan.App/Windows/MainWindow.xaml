<Window x:Class="NbgDev.SwitchMan.App.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Switch Man" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <TextBlock Text="Switch Man" 
                      FontSize="32" 
                      FontWeight="Bold" 
                      HorizontalAlignment="Center" 
                      Margin="0,0,0,20"/>
            
            <TextBlock Text="Manage VLAN configurations for your network switch" 
                      FontSize="16" 
                      HorizontalAlignment="Center" 
                      TextWrapping="Wrap"
                      TextAlignment="Center"
                      Margin="0,0,0,30"/>
            
            <Button Content="Open Settings" 
                   Click="OnSettingsClicked" 
                   Width="200" 
                   Height="40" 
                   FontSize="16"
                   HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
