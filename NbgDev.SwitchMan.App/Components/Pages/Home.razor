@page "/"
@rendermode InteractiveServer

<PageTitle>Switch Man</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex flex-column flex-sm-row justify-content-between align-items-stretch align-items-sm-center gap-3">
                <h1 class="display-5 mb-0">Network Switches</h1>
                <button class="btn btn-primary btn-lg" @onclick="OpenAddDialog">
                    <span class="bi bi-plus-circle me-2"></span>Add Switch
                </button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            @if (SwitchService.GetSwitches().Any())
            {
                @foreach (var sw in SwitchService.GetSwitches())
                {
                    <SwitchCard 
                        Switch="sw" 
                        OnMoveUp="() => MoveUp(sw)" 
                        OnMoveDown="() => MoveDown(sw)" 
                        OnDelete="() => DeleteSwitch(sw)" />
                }
            }
            else
            {
                <div class="alert alert-info">
                    <h5 class="alert-heading">No switches configured</h5>
                    <p class="mb-0">Click "Add Switch" to configure your first network switch.</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Add Switch Dialog -->
@if (showAddDialog)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add New Switch</h5>
                    <button type="button" class="btn-close" @onclick="CloseAddDialog" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="switchName" class="form-label">Switch Name:</label>
                        <input type="text" class="form-control form-control-lg" id="switchName" @bind="switchName" placeholder="e.g., Main Switch" />
                    </div>
                    <div class="mb-3">
                        <label for="ipAddress" class="form-label">IP Address:</label>
                        <input type="text" class="form-control form-control-lg" id="ipAddress" @bind="ipAddress" placeholder="e.g., 192.168.1.1" />
                    </div>
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger">@errorMessage</div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-lg" @onclick="CloseAddDialog">Cancel</button>
                    <button type="button" class="btn btn-primary btn-lg" @onclick="AddSwitch">Add Switch</button>
                </div>
            </div>
        </div>
    </div>
}


