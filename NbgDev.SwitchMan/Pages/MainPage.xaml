<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NbgDev.SwitchMan.Pages.MainPage"
             Title="Switch Man">

    <VerticalStackLayout
        Padding="30,0"
        Spacing="25"
        VerticalOptions="Center"
        HorizontalOptions="Center">

        <Label
            Text="Switch Man"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1"
            FontSize="32"
            HorizontalOptions="Center" />

        <Label
            Text="Manage VLAN configurations for your network switch"
            SemanticProperties.HeadingLevel="Level2"
            SemanticProperties.Description="Application description"
            FontSize="18"
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center" />

        <Button
            x:Name="SettingsBtn"
            Text="Open Settings"
            SemanticProperties.Hint="Opens the settings page"
            Clicked="OnSettingsClicked"
            HorizontalOptions="Center"
            WidthRequest="200"
            Margin="0,20,0,0" />

    </VerticalStackLayout>

</ContentPage>
